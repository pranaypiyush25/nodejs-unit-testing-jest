{
  "name": "nodejs-unit-testing-jest",
  "version": "1.0.0",
  "description": "Example project on how to do unit testing in NodeJS Apps with JEST Library",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "sonar": "sonar-scanner"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbachi/nodejs-unit-testing-jest.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pranaypiyush25/nodejs-unit-testing-jest/issues"
  },
  "homepage": "https://github.com/pranaypiyush25/nodejs-unit-testing-jest#readme",
  "dependencies": {
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "request-promise": "^4.2.6",
    "sonar-scanner": "^3.1.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "reporters": [
      "default"
    ]
  }
}
